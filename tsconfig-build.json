{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "exclude": ["node_modules", "**/__tests__/**", "src/test"],
  "compilerOptions": {
      "plugins": [
          {
              "transform": "@zerollup/ts-transform-paths",
              "exclude": ["*"]
          }
      ],
      "noEmit": false,
      "allowJs": false,
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": true
  }
}
